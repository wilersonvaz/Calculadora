<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraAvancada">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:rowCount="5"
        android:columnCount="2"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="÷"
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClick"/>


        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="√"
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="X"
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="^"
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="-"
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="%"
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="+"
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="@dimen/tamanho_teclas_calc_av"
            android:layout_height="@dimen/tamanho_teclas_calc_av"
            android:text="="
            android:textAlignment="center"
            android:padding="@dimen/padding_teclas_calc_av"
            android:layout_margin="@dimen/margin_teclas_calc_av"
            android:textSize="@dimen/text_size_teclas_calc_av"
            android:background="@drawable/rounded_corner_igualdade"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="@color/white"
            android:onClick="onClick"/>
    </GridLayout>

</FrameLayout>