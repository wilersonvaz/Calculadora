<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="102dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/resultado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textSize="30dip"
                android:paddingTop="20dp"
                android:paddingRight="@dimen/padding_teclas"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/idResultadoParcial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingRight="@dimen/padding_teclas"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="@color/backgroungTeclas"
                        android:textSize="25dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_margin="5dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">
                    <!--                    <Space-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:layout_weight="1" />-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="25dp"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="C"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:textColor="@color/limpar"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="("
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text=")"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="7"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="8"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="9"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="4"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="5"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="6"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="1"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="2"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="3"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="L"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:drawableLeft="@drawable/voltar"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="0"
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>

                            <TextView
                                android:layout_width="@dimen/tamanho_teclas"
                                android:layout_height="@dimen/tamanho_teclas"
                                android:text="."
                                android:textAlignment="center"
                                android:padding="@dimen/padding_teclas"
                                android:layout_margin="@dimen/margin_teclas"
                                android:textSize="@dimen/text_size_teclas"
                                android:background="@drawable/rounded_corner"
                                android:onClick="onClick"/>
                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/frameBotoes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center_horizontal">

                    </FrameLayout>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>